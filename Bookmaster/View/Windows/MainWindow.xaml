                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
        <!-- Меню -->
        <Menu>
           <MenuItem Header="Файл">
                <MenuItem Name="LoginMi"  Header="Вход в систему" Click="LoginMi_Click"/>
                <MenuItem Name="LogoutMi" Header="Выход из системы"  Visibility="Hidden" Click="LogoutMi_Click"/>
                <MenuItem Name="CloseMi" Header="Закрыть приложение" Click="CloseMi_Click"/>
          </MenuItem>
            <!--Meню-->
            <MenuItem Name="LibraryMi" Header="Библиотека"
                      Visibility="Collapsed">
                <MenuItem Name="BrowsCatztlogMi"  Header="Просмотр каталога" Click="BrowsCatztlogMi_Click"/>
                <MenuItem Name="ManageCustomersMi" Header="Управление читателями" Click="ManageCustomersMi_Click"/>
                <MenuItem Name="CirculationMi" Header="Управление абонентом" Click="CirculationMi_Click"/>
                <MenuItem Name="RepostMi" Header="Отчеты" Click="RepostMi_Click"/>
                
                <!--Просмотр каталога-->
                <!--Управление читателями-->
